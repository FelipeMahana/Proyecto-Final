<h1>Plans#detail</h1>
<p>Find me in app/views/plans/show.html.erb</p>


<div class="container">
	<div class="row">		
			<div class="col-md-4 mb-4">
				<div class="card">
					<div class="card-body text-center">
						<!-- usar variable que viene desde plans_c del metodo show(la con params[id]) -->
					<% if @plan.contract_type == 1%>
						<h5 class="card-title"> Plan Entrenamiento </h5>
					<% elsif @plan.contract_type == 2 %>
						<h5 class="card-title"> Plan Nutricion </h5>
					<% else %>
						<h5 class="card-title"> Plan Entrenamiento con nutricion </h5>
					<% end %>
					<p class="card-title">Precio: $<%= @plan.price %> </p>
					<p class="card-text">La duracion del plan <%= @plan.duration %> mes o meses</p>
					<p class="card-text"><%= @plan.description %> </p>
					<a href="#" class="btn btn-success"><!-- <i class="fas fa-cart-plus"></i> -->Pagar</a>

				 	</div>
				</div>
						  
			</div>		
	</div>
</div>


<%= link_to 'Volver', root_path %>