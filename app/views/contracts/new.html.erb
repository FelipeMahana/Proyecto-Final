<h4>Formualrio</h4>

<div class="row">	
	<div class="col-md-4 mb-4">
		<%=form_with(model: [@plan, @contract], local: true) do |form| %>
			<%=form.label :weight %> <br>
			<%=form.number_field :weight %>
			<br>
			<%=form.label :height %> <br>
			<%=form.number_field :height %>
			<br>
			<%=form.label :age %> <br>
			<%=form.number_field :age, in: 1...131 %>
			<br>
			<%=form.label :sex %> <br>
			<%=form.select(:sex, options_for_select([['Hombre', 1], ['Mujer', 2]])) %>
			<br>
			<%=form.label :activity_level %> <br>
			<%=form.select(:activity_level, options_for_select([['opcion 1', 1], ['opcion 2', 2], ['opcion 3', 3], ['opcion 4', 4], ['opcion 5', 5]])) %>
			<br>
			<%=form.label :fat_percentage %> <br>
			<%=form.number_field :fat_percentage, in: 1...101 %>
			<br>
			<%=form.label :bmi %> <br>
			<%=form.number_field :bmi %>
			<br>
			<%=form.label :disease %> <br>
			<%=form.text_field :disease %>
			<br>
			<%=form.label :allergies %> <br>
			<%=form.text_field :allergies %>
			<br>
			<%=form.label :bmr %> <br>
			<%=form.number_field :bmr %>
			<br>
			<%=form.label :karvonen %> <br>
			<%=form.number_field :karvonen %>
			<br>
			<%=form.label :heart_rate %> <br>
			<%=form.number_field :heart_rate %>
			<br>
			<%=form.label :goal %> <br>
			<%=form.text_area :goal %>
			<br>
			<%= form.submit 'crear' %>
			<br>
			<%= link_to 'volver a index', root_path %>
		<% end %>
	</div>

	<div class="offset-2 col-md-4 mb-4">
		<h5>Plan Contratado</h5>
		<div class="card">
			<div class="card-body text-center">
				<% if @plan.contract_type == 1%>
					<h5 class="card-title"> Plan Entrenamiento </h5>
				<% elsif @plan.contract_type == 2 %>
					<h5 class="card-title"> Plan Nutricion </h5>
				<% else %>
					<h5 class="card-title"> Plan Entrenamiento con nutricion </h5>
				<% end %>
				<p class="card-title">Precio: $<%= @plan.price %> </p>
				<p class="card-text">La duracion del plan <%= @plan.duration %> mes o meses</p>
				<p class="card-text"><%= @plan.description %> </p>
		 	</div>
		</div>		  
	</div>
</div>






